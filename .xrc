if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Load aliases file
if [ -f $HOME/.aliases ]; then
    source "$HOME/.aliases"
fi

# Load the .localrc file for local specific settings
if [ -f $HOME/.localrc ]; then
    source "$HOME/.localrc"
fi

